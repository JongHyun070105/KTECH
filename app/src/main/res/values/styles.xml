<resources>
    <!-- Bottom Navigation Style -->
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/navigation_item_icon_color</item>
        <item name="itemTextColor">@color/navigation_item_text_color</item>
        <item name="background">@color/bottom_nav_color</item>
        <item name="elevation">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- CalendarView Custom Styles -->
    <style name="CustomDateTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomCalendarView">
        <item name="android:dateTextAppearance">@style/CustomDateTextAppearance</item>
        <item name="android:weekDayTextAppearance">@style/CustomWeekDayTextAppearance</item>
        <item name="android:selectedDateVerticalBar">@drawable/selected_date_vertical_bar</item>
    </style>

    <style name="CustomWeekDayTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Month title style -->
    <style name="CustomMonthTitleTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/secondary_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Login Activity theme -->
    <style name="Theme.KTECH.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
